@model TrenCR.Models.EstacionRuta

@{
    ViewData["Title"] = "Nuevo";
}

<h1 class="alert alert-primary" role="alert">Crear Nueva Estación X Ruta</h1>

 
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdRuta" class="control-label"></label>
                <select asp-for="IdRuta" class ="form-control" asp-items="ViewBag.IdRuta"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdEstacion" class="control-label"></label>
                <select asp-for="IdEstacion" class ="form-control" asp-items="ViewBag.IdEstacion"></select>
            </div> 
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-warning">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

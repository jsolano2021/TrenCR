@model TrenCR.Models.EstacionRuta

@{
    ViewData["Title"] = "Editar";
}

<h1 class="alert alert-primary" role="alert">Editar</h1>

 
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdRuta" class="control-label"></label>
                <select asp-for="IdRuta" class="form-control" asp-items="ViewBag.IdRuta"></select>
                <span asp-validation-for="IdRuta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstacion" class="control-label"></label>
                <select asp-for="IdEstacion" class="form-control" asp-items="ViewBag.IdEstacion"></select>
                <span asp-validation-for="IdEstacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-warning">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
